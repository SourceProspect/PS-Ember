{{#ui-layout
     class="container" as |
      posts
      filter
      registration
      users
      loggedInUser
      filterWith
      registrationAction
      registrationNewAction
      registrationLogInAction
      creatProfile
     |}}
<!---->
{{log "posts" posts}}
<!---->
{{log "registration hbs" registration}}
<!---->
{{log "users" users}}
<!---->
{{log "registrationNewAction" registrationNewAction}}
<!---->
{{log "registrationLogInAction" registrationLogInAction}}
<!---->
{{#if posts.showLogin}}
  <h1>Prospect Source</h1>
  <input id="UserName" placeholder="UserName" value={{registration.UserName}} oninput={{action registrationAction}}>
  <h1>{{registration.UserName}}</h1>

  <input id="Password" placeholder="Password" value={{registration.Password}} oninput={{action registrationAction}}>
  <h1>{{registration.Password}}</h1>

  <button onclick={{action registrationLogInAction}}>Prospect Login </button>
  <br/>
  <button onclick={{action registrationNewAction }}>Register</button>
{{/if }}

{{#if posts.showRegister}}
  <h4>Create Prospect Profile: {{loggedInUser.UserName}}</h4>
  <input id="UserName" placeholder="UserName" value={{registration.UserName}} oninput={{action registrationAction}}>
  <br/>
  <input id="FirstName" placeholder="FirstName" value={{registration.FirstName}} oninput={{action registrationAction}}>
  <br/>
  <input id="LastName" placeholder="LastName" value={{registration.LastName}} oninput={{action registrationAction}}>
  <br/>
  <input id="email" placeholder="email" value={{registration.email}} oninput={{action registrationAction}}>
  <br/>
  <input id="password" placeholder="password" value={{registration.password}} oninput={{action registrationAction}}>
  <br/>
  <button onclick={{action creatProfile}}>Create</button>
{{/if }}

{{#if posts.showContact}}
  <h4>Add Contact Information: {{loggedInUser.UserName}}</h4>
  <input id="Phone" placeholder="Phone" value={{registration.Phone}} oninput={{action registrationAction}}>
  <br/>
  <input id="Email" placeholder="Email" value={{registration.email}} oninput={{action registrationAction}}>
  <br/>
  <input id="CoachName" placeholder="CoachName" value={{registration.CoachName}} oninput={{action registrationAction}}>
  <br/>
  <input id="CoachPhone" placeholder="CoachPhone" value={{registration.CoachPhone}} oninput={{action registrationAction}}>
  <br/>
  <input id="password" placeholder="password" value={{registration.password}} oninput={{action registrationAction}}>
  <br/>
  <button onclick={{action creatProfile}}> Next </button>
{{/if }}

{{#if posts.showAthletic}}
  <h4>Add Athletic Information: {{loggedInUser.UserName}}</h4>
  <input id="Height" placeholder="Height" value={{registration.Height}} oninput={{action registrationAction}}>
  <br/>
  <input id="Weight" placeholder="Weight" value={{registration.Weight}} oninput={{action registrationAction}}>
  <br/>
  <input id="Vertical" placeholder="Vertical" value={{registration.Vertical}} oninput={{action registrationAction}}>
  <br/>
  <input id="Position" placeholder="Position" value={{registration.Position}} oninput={{action registrationAction}}>
  <br/>
  <input id="Club" placeholder="Club" value={{registration.Club}} oninput={{action registrationAction}}>
  <br/>
  <input id="HighSchool" placeholder="HighSchool" value={{registration.HighSchool}} oninput={{action registrationAction}}>
  <br/>
  <button onclick={{action creatProfile}}> Next </button>
{{/if }}

{{#if posts.showAcademic}}
  <h4>Add Academic Information: {{loggedInUser.UserName}}</h4>
  <input id="GPA" placeholder="GPA" value={{registration.GPA}} oninput={{action registrationAction}}>
  <br/>
  <input id="ACT" placeholder="ACT" value={{registration.ACT}} oninput={{action registrationAction}}>
  <br/>
  <input id="ClassRank" placeholder="ClassRank" value={{registration.ClassRank}} oninput={{action registrationAction}}>
  <br/>
  <button onclick={{action creatProfile}}> Next </button>
{{/if }}

{{#if posts.showTwitter}}
  <h4>Twitter</h4>
  <input id="Twitter" placeholder="@twitterhandle" value={{registration.Twitter}} oninput={{action registrationAction}}>
  <br/>
  <button onclick={{action creatProfile}}> Next </button>
{{/if }}


{{/ui-layout}}
